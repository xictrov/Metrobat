<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v.metrobat.front.Fragment.NewItemFragment">

    <LinearLayout
        android:id="@+id/newItemFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/itemInfoIcon"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/ic_info_black_24dp"
                android:tint="@color/colorSecondaryDark" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editTextKind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tipus_objecte_nom"
                    android:textColorHint="@color/colorSecondaryDark" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_marginStart="7dp"
                android:id="@+id/transportIcon"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:src="@drawable/ic_directions_subway_black_24dp"
                android:tint="@color/colorSecondaryDark" />

            <Spinner
                android:layout_marginStart="0dp"
                android:id="@+id/transportSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dialog"/>

            <Spinner
                android:layout_marginEnd="30dp"
                android:id="@+id/lineSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dialog"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/ic_today_black_24dp"
                android:tint="@color/colorSecondaryDark" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/date"
                    android:textColorHint="@color/colorSecondaryDark"
                    android:clickable="true"
                    android:inputType="none"
                    android:focusable="false" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/hourIcon"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:src="@drawable/ic_access_time_black_24dp"
                android:tint="@color/colorSecondaryDark" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hora"
                    android:textColorHint="@color/colorSecondaryDark"
                    android:inputType="none"
                    android:clickable="true"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/description"
                    android:textColorHint="@color/colorSecondaryDark"
                    android:ems="10"
                    android:inputType="textMultiLine" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center">


            <Button
                android:id="@+id/publicaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publica" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
